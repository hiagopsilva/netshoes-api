generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model SelectedProduct {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  selectedProduct String
  stockAvailable  Boolean
  departmentId    String      @db.ObjectId
  department      Department  @relation(fields: [departmentId], references: [id])
  brandId         String      @db.ObjectId
  brand           Brand       @relation(fields: [brandId], references: [id])
  productTypeId   String      @db.ObjectId
  productType     ProductType @relation(fields: [productTypeId], references: [id])
  productId       String      @db.ObjectId
  product         Product     @relation(fields: [productId], references: [code])
}

model Department {
  id       String            @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  products SelectedProduct[]
}

model Brand {
  id       String            @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  products SelectedProduct[]
}

model ProductType {
  id       String            @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  products SelectedProduct[]
}

model Product {
  code             String            @id @default(auto()) @map("_id") @db.ObjectId
  available        Boolean
  visible          Boolean
  detailsId        String            @db.ObjectId
  details          ProductDetails    @relation(fields: [detailsId], references: [id])
  image            String
  selectedProducts SelectedProduct[]
}

model ProductDetails {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  available   Boolean
  visible     Boolean
  sizeId      String    @db.ObjectId
  size        Size      @relation(fields: [sizeId], references: [id])
  sku         String
  Product     Product[]
}

model Size {
  id             String           @id @default(auto()) @map("_id") @db.ObjectId
  code           String
  label          String
  productDetails ProductDetails[]
}
