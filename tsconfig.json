{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".", 
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src", 
    "src/@types/**/*.d.ts"  
  ],
  "exclude": [
    "node_modules"
  ]
}
